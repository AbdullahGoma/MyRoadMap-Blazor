
<div style="border:2px solid red">
    <h3>Child4</h3>

    <input @bind="Data" />
    <button @onclick="Change">Change Data</button>
</div>

@code {
    [Parameter]
    public EventCallback<string> DataChangeEvent { get; set; } // Declare Event
    
    public string Data { get; set; }

    void Change()
    {
        Console.WriteLine("Button Click");
        // Data = "New Data";
        
        // Fire Event
        DataChangeEvent.InvokeAsync(Data); 
    }
}
